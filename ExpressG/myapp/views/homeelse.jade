extends layout

block content
  include logic/list
  include logic/page.jade
  p -------------------------------------------------
  h1(style="font-size:15pt;") 제목 : #{sanitizeTitle} 
  h2(style="font-size:10pt;") #{sanitizeDescription}
  p(style="color:red;") 작성자 : #{topicNickname}
  p
    a(href="/topic/create") 글쓰기 | 
    a(href="/topic/update/" + topicRe.id) 글수정

    form(action="/topic/delete_process" method="post")
        p
         input(type="hidden" name="id" value="#{topicRe.id}")
         input(type="hidden" name="users_id" value="#{topicRe.users_id}")
         input(type="submit" value="글삭제")

  
